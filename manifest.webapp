{
  "name": "Loop",
  "description": "The Mozilla Loop (WebRTC app) client",
  "launch_path": "/launcher.html",
  "type": "privileged",
  "developer": {
    "name": "The Gaia Team",
    "url": "https://github.com/mozilla-b2g/gaia"
  },
  "permissions": {
    "attention":{},
    "systemXHR":{},
    "push":{},
    "video-capture": {},
    "audio-capture": {},
    "audio-channel-telephony":{},
    "audio-channel-ringer":{},
    "speaker-control": {},
    "camera":{},
    "priv-firefox-accounts": {}
  },
  "messages": [
     { "push": "/test_app/test.html" }
  ],
  "activities": {
    "webrtc-call": {
      "href": "sketch_loop/index.html",
      "filters": {
        "type": "webcontacts/contact"
       },
      "disposition": "window"
    }
  },
  "default_locale": "en",
  "orientation": "portrait",
  "origin": "app://loop.dev.mozaws.net"
}
